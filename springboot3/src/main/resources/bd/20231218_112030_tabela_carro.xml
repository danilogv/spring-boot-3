<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2" author="danilo.vicente">
        <createTable tableName="carro">
            <column name="id" type="char(36)">
                <constraints nullable="false" />
            </column>
            <column name="marca" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="nome" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="ano" type="int">
                <constraints nullable="false" />
            </column>
            <column name="valor" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="pessoa_id" type="char(36)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey tableName="carro" columnNames="id" constraintName="pk_id_carro" />
        <addForeignKeyConstraint baseTableName="carro" baseColumnNames="pessoa_id" constraintName="fk_pessoa" referencedTableName="pessoa" referencedColumnNames="id" onDelete="CASCADE" />
        <addUniqueConstraint tableName="carro" columnNames="nome,ano,pessoa_id" constraintName="uq_nome_ano_pessoa" />
    </changeSet>
</databaseChangeLog>